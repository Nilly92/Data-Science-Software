# Graphics.kv file of the code
  
# Creating Graphics for Start Page 
  
# Rectangle 


MyScreenManager:
    #transition: FadeTransition()
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name:"first"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Cover.jpeg'
    
    Button:
        background_normal: ''
        background_color: rgba ('3BABD9')
        text: "Let's Go!"
        size_hint: None,None
        size: 150,150
        pos:  90,380
        bold:True
        on_release: 
 		   app.root.current = "second"
 		   root.manager.transition.direction = "left"
    Image:
        source: 'DataVisu.jpeg'
        size_hint: None,None
        size: 300,300
        pos: 40,100
     
 

    
<SecondWindow>:
    name: "second" 
    Button:
        background_normal: ''
        background_color: rgba ('3BABD9')
        text: "Back"
        size_hint: None,None
        size: 70,40
        pos:  50,500
        bold:True
        on_release: 
 		   app.root.current = "first"
 		   root.manager.transition.direction = "right"
    
    Label:
    	text: "Second Screen"
    	font_size: 32
    

                
   
   