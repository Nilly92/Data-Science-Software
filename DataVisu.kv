# Graphics.kv file of the code
  
# Creating Graphics for Start Page 
  
# Rectangle 


MyScreenManager:
    #transition: FadeTransition()
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name:"first"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Cover.jpeg'
    
    Button:
        background_normal: ''
        background_color: rgba ('3BABD9')
        text: "Let's Go!"
        size_hint: None,None
        size: 180,180
        pos:  70,350
        bold:True
        on_release: 
 		   app.root.current = "second"
 		   root.manager.transition.direction = "left"
    Image:
        source: 'DataVisu.jpeg'
        size_hint: None,None
        size: 300,300
        pos: 40,100
     
 

    
<SecondWindow>:
    name: "second" 
    BoxLayout:
    	orientation: "vertical"
    	size: root.width, root.height
    
    Label:
    	text: "Second Screen"
    	font_size: 32
    

                
   
   